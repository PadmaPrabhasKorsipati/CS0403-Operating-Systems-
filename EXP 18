#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size, direction;
    int req[50], total = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size (max cylinder + 1): ");
    scanf("%d", &disk_size);

    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &direction);

    // Sort request array
    for (int i = 0; i < n - 1; i++)
        for (int j = i + 1; j < n; j++)
            if (req[i] > req[j]) {
                int temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    int current = head;

    if (direction == 1) { // Right
        for (int i = 0; i < n; i++) {
            if (req[i] >= head) {
                total += abs(req[i] - current);
                current = req[i];
            }
        }
        total += abs((disk_size - 1) - current);
        current = disk_size - 1;

        for (int i = n - 1; i >= 0; i--) {
            if (req[i] < head) {
                total += abs(req[i] - current);
                current = req[i];
            }
        }
    } else { // Left
        for (int i = n - 1; i >= 0; i--) {
            if (req[i] <= head) {
                total += abs(req[i] - current);
                current = req[i];
            }
        }
        total += abs(current - 0);
        current = 0;

        for (int i = 0; i < n; i++) {
            if (req[i] > head) {
                total += abs(req[i] - current);
                current = req[i];
            }
        }
    }

    printf("\nTotal Head Movement = %d cylinders\n", total);
    return 0;
}
