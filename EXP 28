#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char filename[50], pattern[50];
    char line[200];
    int found = 0;

    printf("Enter file name: ");
    scanf("%s", filename);

    printf("Enter word to search: ");
    scanf("%s", pattern);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("File not found!\n");
        return 1;
    }

    printf("\nLines containing '%s':\n", pattern);

    while (fgets(line, sizeof(line), fp) != NULL) {
        if (strstr(line, pattern) != NULL) {
            printf("%s", line);
            found = 1;
        }
    }

    if (!found)
        printf("No matching lines found.\n");

    fclose(fp);
    return 0;
}
