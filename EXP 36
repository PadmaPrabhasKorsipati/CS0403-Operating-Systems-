#include <stdio.h>

int main() {
    int n, blocks[10];

    printf("Enter number of blocks: ");
    scanf("%d", &n);

    printf("Enter block numbers:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &blocks[i]);

    printf("Linked Allocation:\n");
    for (int i = 0; i < n - 1; i++)
        printf("%d -> ", blocks[i]);
    printf("%d -> NULL\n", blocks[n - 1]);

    return 0;
}
