#include <stdio.h>

int main() {
    int pages[50], frames[10];
    int n, f, pageFaults = 0;
    int found, pos, farthest, index;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames
    for (int i = 0; i < f; i++)
        frames[i] = -1;

    printf("\nPage\tFrames\n");

    for (int i = 0; i < n; i++) {
        found = 0;

        // Check if page is already in frame
        for (int j = 0; j < f; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        if (!found) {
            int empty = -1;

            // Check for empty frame
            for (int j = 0; j < f; j++) {
                if (frames[j] == -1) {
                    empty = j;
                    break;
                }
            }

            if (empty != -1) {
                frames[empty] = pages[i];
            } else {
                farthest = -1;
                pos = -1;

                for (int j = 0; j < f; j++) {
                    index = -1;
                    for (int k = i + 1; k < n; k++) {
                        if (frames[j] == pages[k]) {
                            index = k;
                            break;
                        }
                    }

                    if (index == -1) {
                        pos = j;
                        break;
                    }

                    if (index > farthest) {
                        farthest = index;
                        pos = j;
                    }
                }

                frames[pos] = pages[i];
            }

            pageFaults++;
        }

        printf("%d\t", pages[i]);
        for (int j = 0; j < f; j++)
            printf("%d ", frames[j]);
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
