#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    char write_buf[] = "UNIX I/O System Calls Demo";
    char read_buf[100];
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;

    /* File Operations */
    fd = open("io_demo.txt", O_CREAT | O_RDWR, 0644);
    write(fd, write_buf, sizeof(write_buf));

    lseek(fd, 0, SEEK_SET);
    read(fd, read_buf, sizeof(read_buf));
    printf("File Content: %s\n", read_buf);

    /* File Information */
    stat("io_demo.txt", &fileStat);
    printf("\nFile Information:\n");
    printf("Size: %ld bytes\n", fileStat.st_size);
    printf("Inode: %ld\n", fileStat.st_ino);
    printf("Permissions: %o\n", fileStat.st_mode & 0777);

    close(fd);

    /* Directory Operations */
    dir = opendir(".");
    printf("\nDirectory Contents:\n");
    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }
    closedir(dir);

    return 0;
}
