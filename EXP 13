#include <stdio.h>

int main() {
    int pages[50], frames[10], time[10];
    int n, f, pageFaults = 0, counter = 0;
    int found, pos;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames and time
    for (int i = 0; i < f; i++) {
        frames[i] = -1;
        time[i] = 0;
    }

    printf("\nPage\tFrames\n");

    for (int i = 0; i < n; i++) {
        found = 0;
        counter++;

        // Check if page is already in frame
        for (int j = 0; j < f; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                time[j] = counter;
                break;
            }
        }

        if (!found) {
            int min = time[0];
            pos = 0;

            for (int j = 1; j < f; j++) {
                if (time[j] < min) {
                    min = time[j];
                    pos = j;
                }
            }

            frames[pos] = pages[i];
            time[pos] = counter;
            pageFaults++;
        }

        printf("%d\t", pages[i]);
        for (int j = 0; j < f; j++)
            printf("%d ", frames[j]);
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
